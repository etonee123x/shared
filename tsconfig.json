{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": true,
    "declaration": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": false,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}